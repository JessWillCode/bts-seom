generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  password   String
  name       String
  bias       Bias        @default(OT7)
  faveAlbums FaveAlbum[]
  faveSongs  FaveSong[]
}

model Bangtan {
  id     Int     @id @default(autoincrement())
  name   String
  stageNames StageName[]
  albums Album[]
  songs Song[]
}

model Album {
  id           Int         @id @default(autoincrement())
  albumTitle        String
  yearReleased Int
  artistId     Int
  name       Bangtan     @relation(fields: [artistId], references: [id])
  songs        Song[]
  FaveAlbum    FaveAlbum[]
}

model Song {
  id       Int        @id @default(autoincrement())
  title    String
  albumId    Int?
  artistId     Int
  name       Bangtan     @relation(fields: [artistId], references: [id])
  album      Album?   @relation(fields: [albumId], references: [id])
  FaveSong FaveSong[]
}

model FaveAlbum {
  userId  Int
  albumId Int
  user    User  @relation(fields: [userId], references: [id])
  album   Album @relation(fields: [albumId], references: [id])

  @@id([userId, albumId])
}

model FaveSong {
  userId Int
  songId Int
  user   User @relation(fields: [userId], references: [id])
  song   Song @relation(fields: [songId], references: [id])

  @@id([userId, songId])
}

model StageName {
  Id Int @id @default(autoincrement())
  name String
  bangtanId Int
  bangtan Bangtan @relation(fields: [bangtanId], references: [id])
}

enum Bias {
  OT7
  RM
  JIN
  SUGA
  JHOPE
  JIMIN
  V
  JK
}